<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="gpslogger_preferences">
                        
     <EditTextPreference android:key="eotrackme_user_id"
                         android:title="EOTrackMe UserID"
                         android:summary="Enter your EOTrackMe Member ID (e.g. M1234)"
                         android:dialogTitle="EOTrackMe MemberID"/>
    
    <PreferenceScreen android:title="@string/pref_logging_title" android:summary="@string/pref_logging_summary">
                
            <CheckBoxPreference android:key="prefer_celltower" android:summary="@string/prefer_celltower_summary" android:title="@string/prefer_celltower_title" />

            <EditTextPreference android:key="time_before_logging" android:title="@string/time_before_logging_title" android:summary="@string/time_before_logging_summary" android:dialogTitle="@string/time_before_logging_dialog_title" android:numeric="integer" android:maxLength="4" android:hint="@string/time_before_logging_hint" />


            <EditTextPreference android:key="distance_before_logging" android:title="@string/distance_before_logging_title" android:summary="@string/distance_before_logging_summary" android:dialogTitle="@string/settings_distance_in_meters" android:numeric="integer" android:maxLength="4" android:hint="@string/settings_enter_meters" />


            <EditTextPreference android:key="accuracy_before_logging" android:title="@string/accuracy_before_logging_title" android:summary="@string/accuracy_before_logging_summary" android:dialogTitle="@string/settings_accuracy_in_meters" android:numeric="integer" android:maxLength="4" android:hint="@string/settings_enter_meters" />

            <EditTextPreference android:key="retry_time" android:title="@string/retry_time_title" android:summary="@string/retry_time_summary" android:dialogTitle="@string/retry_time_dialog_title" android:numeric="integer" android:maxLength="4" android:hint="@string/retry_time_hint" />

	</PreferenceScreen>
	
	<PreferenceScreen android:title="@string/pref_general_title" android:summary="@string/pref_general_summary">

        <CheckBoxPreference android:key="show_notification" android:summary="@string/show_notification_summary" android:title="@string/show_notification_title" android:defaultValue="true" />
        <CheckBoxPreference android:title="@string/startonbootup_title" android:summary="@string/startonbootup_summary" android:key="startonbootup" />
        <CheckBoxPreference android:title="@string/useimperial_title" android:summary="@string/useimperial_summary" android:key="useImperial" />
        <Preference android:title="@string/enabledisablegps_title" android:summary="@string/enabledisablegps_summary" android:key="enableDisableGps" android:defaultValue="false" />
<!-- 
        <CheckBoxPreference android:title="@string/debuglog_title" android:summary="@string/debuglog_summary" android:key="debugtofile" />
 -->
    </PreferenceScreen>
    
	
     <EditTextPreference android:key="eotrackme_device_id" android:title="DeviceID"
                         android:dialogTitle="DeviceID"/>
     
</PreferenceScreen>
